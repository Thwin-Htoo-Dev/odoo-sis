<odoo>
  <record id="view_move_form_course_inherit" model="ir.ui.view">
    <field name="name">account.move.form.course.inherit</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">

      <!-- Add course_id to inline form of invoice lines -->
      <xpath expr="//field[@name='invoice_line_ids']/form" position="inside">
        <field name="course_id"/>
      </xpath>

      <!-- Optional: Make the invoice lines editable inline -->
      <xpath expr="//field[@name='invoice_line_ids']" position="attributes">
        <attribute name="editable">bottom</attribute>
      </xpath>

    </field>
  </record>
</odoo>
