<odoo>
    <!-- FORM VIEW -->
    <record id="view_course_major_form" model="ir.ui.view">
        <field name="name">course.major.form</field>
        <field name="model">course.major</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code" readonly="1"/>
                        <field name="description"/>
                        <field name="image" widget="image" class="custom_avatar"/>
                        <field name="subject_list" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Schedules">
                            <field name="schedule_ids">
                                <list>
                                    <field name="subject"/>
                                    <field name="instructor_id"/>
                                </list>
                                <form string="Schedule">
                                    <group>
                                        <field name="subject"/>
                                        <field name="instructor_id"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_course_major_list" model="ir.ui.view">
        <field name="name">course.major.list</field>
        <field name="model">course.major</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="subject_list"/>
                <field name="image" widget="image" class="custom_avatar"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- ACTION -->
    <record id="act_course_major" model="ir.actions.act_window">
        <field name="name">Majors</field>
        <field name="res_model">course.major</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_major"
              name="Majors"
              parent="openeducat_core.menu_op_school_config_course"
              action="act_course_major"
              sequence="15"/>
</odoo>
